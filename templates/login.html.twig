{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}
{% block body %}
	{% if error %}
		<div class="form-control text-center bg-danger align-items-center"  style="max-width: 500px">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div class="container text-center h-100 d-flex align-items-center justify-content-center animated-bounceInRight" style="max-width: 500px">
		<form action="{{ path('login') }}" class="form-signin" method="post">
			
		<h1 class="display-1 text-light shadow-lg">NOTIZIUM</h1>
		<br>
		<br>
		<br>
		<div class="form-control text-center shadow-lg">
			<h3 class="h3 mb-3 font-weight-normal">Anmelden</h3>
			<table class="table align-middle table-borderless">
				<tr>
					<td><label for="username">Benutzername:</label></td>
					<td><input type="text" id="username" name="_username" value="{{ last_username }}"/></td>
				</tr>
				<tr>
					<td><label for="password">Passwort:</label></td>
					<td><input type="password" id="password" name="_password"/></td>
				</tr>
			</table>
			<br>
			<button class="btn btn-primary btn-block" type="submit">Anmelden</button>
			<a class="btn btn-primary" href="/register" role="button">Registrierung</a>
		</div>
		</form>
	</div>
{% endblock %}
