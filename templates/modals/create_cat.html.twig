<!-- Modal -->
<div class="modal fade" id="{{target_modal}}" tabindex="-1" aria-labelledby="#{{target_modal}}" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-dark" id="{{target_modal}}">Kategorie erstellen</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-dark">
        Name:
        <input type="text" class="form-control" id="todo" placeholder="Neue Kategorie"></input>
      </div>
      {{ form_start(newCatForm, {'action' : path('newCat')}) }}
          <form method="post">
                <td>Name</td>
                <td>{{ form_row(newCatForm.name)}}</td>
          </from>
        {{ form_end(newCatForm) }}
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
        <button type="button" class="btn btn-success">Erstellen</button>
      </div>
    </div>
  </div>
</div>