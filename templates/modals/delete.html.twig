<!-- Modal -->
<div class="modal fade" id="{{target_modal}}" tabindex="-1" aria-labelledby="#{{target_modal}}" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-dark" id="{{target_modal}}">Notiz '{{note_name}}' löschen</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-dark">
        Die Notiz wird unwiderruflich gelöscht. Möchtest du fortfahren?
      </div>
      {{ form_start(delete_note) }}
      {{ form_row(delete_note.save) }}
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
        {{ form_end(delete_note) }}
        
        
      </div>
    </div>
  </div>
</div>