{# templates/notes.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<nav id="topBar" class="navbar mb-2 bg-primary bg-gradient">
    <div class="container-fluid">
        <div id="topBarLoadingSpinner" style="width: 1.5rem; height: 1.5rem; grid-column: 1; grid-row: 1;" class="spinner-border spinner-border-sm text-white m-0" role="status"></div>
        <svg id="topBarSyncedIcon" xmlns="http://www.w3.org/2000/svg" 
                style="grid-column: 1; grid-row: 1;" width="1.5rem" height="1.5rem" 
                fill="white" class="bi bi-cloud-check" viewBox="0 0 16 16"
                data-toggle="tooltip" data-bs-placement="right" 
                title="Deine Notizen wurden automatisch gespeichert">
            <path fill-rule="evenodd" d="M10.354 6.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7 8.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
            <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383zm.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z"/>
        </svg>
        <h4 class="text-white">NOTIZIUM</h4>
        <div>
            <button type="button" class="btn text-white btn-outline-info" data-bs-toggle="modal" data-bs-target="#shareModal">
                <svg xmlns="http://www.w3.org/2000/svg" width="1.5rem" height="1.5rem" fill="currentColor" class="bi bi-share" viewBox="0 0 16 16"
                    data-toggle="tooltip" data-bs-placement="bottom" title="Diese Notiz teilen">
                    <path d="M13.5 1a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.499 2.499 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5zm-8.5 4a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zm11 5.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3z"/>
                </svg>
            </button>
            {% set vars = {
                target_modal: 'shareModal',
                note_name: 'TODO',
                note_id: 'TODO',
            } %}
            {% include 'modals/share.html.twig' with vars %}

            <button type="button" class="btn text-white btn-outline-danger" onclick="location.href='/logout'">
                <svg xmlns="http://www.w3.org/2000/svg" width="1.5rem" height="1.5rem" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16"
                    data-toggle="tooltip" data-bs-placement="bottom" title="Abmelden">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"></path>
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"></path>
                </svg>
            </button>
        </div>
    </div>
</nav>
<div id="main" class="row container-fluid h-100 text-white" style="overflow: hidden;">
    <div id="content" class="col-10 row">
        <div id="editor" class="col-md w-50 h-100">
            <textarea id="textEditor" class="rounded p-3 w-100 h-100 bg-dark text-white"></textarea>
        </div>
        <!--<div id="preview" class="rounded p-3 mb-2 bg-dark col-md h-100 w-50" style="overflow-wrap:break-word; overflow:hidden;"></div>-->
        <iframe src="preview.html" id="preview" class="rounded p-3 mb-2 bg-dark col-md h-100 w-50" style="overflow-wrap:break-word; overflow:hidden;"></iframe>
    </div>
    <div id="sideBar" class="col row">
        <div class="col overflow-auto scrollbar scrollbar-primary h-75 mb-2" style="overflow-y: scroll; max-height:90vh;">
            {% for category in notes|keys %}
                <ul class="list-group mb-2" >
                    <a class="text-decoration-none rounded p-1 bg-primary text-white text-center" data-bs-toggle="collapse" href="#category_{{ loop.index0 }}" role="button" aria-expanded="false" aria-controls="category_{{ loop.index0 }}">
                        {{ category }}
                    </a>
                    <div class="collapse" id="category_{{ loop.index0 }}">
                        {% for note in notes[category] %}                            
                            <!--<a href='/notes/' ~ loop.parent.index0 ~ '/' ~ j class="list-group-item list-group-item-action text-white bg-dark">...</a>-->
                            <a href='#' class="list-group-item list-group-item-action text-white bg-dark">{{ note }}</a>
                        {% endfor %}
                    </div>
                </ul>
            {% endfor %}
        </div>
        <div class="h-25"> 
            <button type="button" class="btn btn-success m-1" data-bs-toggle="modal" data-bs-target="#createModal">Neu</button>
            {% set vars = {
                target_modal: 'createModal',
            } %}
            {% include 'modals/create.html.twig' with vars %}
            <button type="button" class="btn btn-secondary m-1 disabled" data-bs-toggle="modal" data-bs-target="#moveModal">Verschieben</button>
            {% set vars = {
                target_modal: 'moveModal',
                note_name: 'TODO',
                note_id: 'TODO',
                note_category: 'TODO',
            } %}
            {% include 'modals/move.html.twig' with vars %}
            <button type="button" class="btn btn-danger m-1 disabled" data-bs-toggle="modal" data-bs-target="#deleteModal">
                LÃ¶schen
            </button>
            {% set vars = {
                target_modal: 'deleteModal',
                note_name: 'TODO',
                note_id: 'TODO',
            } %}
            {% include 'modals/delete.html.twig' with vars %}
        </div>
    </div>
</div>
<script>
    // on page loaded
    $(document).ready(function() {
        $('[data-toggle="tooltip"]').tooltip();
        $('#topBarLoadingSpinner').hide()
        let nextSync = 0;
        $("#textEditor").on("input", function () {
            // set content of preview
            $("#preview").contents().find('body').html(marked.parse($("#textEditor").val()));
            if (nextSync < Date.now()) {
                nextSync = Date.now() + 1000;
                $('#topBarSyncedIcon').fadeOut(function () { $('#topBarLoadingSpinner').fadeIn(); });
                setTimeout(function() {
                    $('#topBarLoadingSpinner').fadeOut(function () { $('#topBarSyncedIcon').fadeIn(); });
                }, 1000);

                $.ajax({
                    url: "/notes/sync",
                    type: "POST",
                    data: {
                        "content": $("#textEditor").val(),
                    }
                });
            }
        });

        // if texteditor gets scrolled to the bottom, scroll the preview to the same position
        $("#textEditor").on("scroll", function () {
            const clampNumber = (num, a, b) => Math.max(Math.min(num, Math.max(a, b)), Math.min(a, b));
            let editorPerc = ($('#textEditor').scrollTop() + $('#textEditor').get(0).offsetHeight) / $('#textEditor').get(0).scrollHeight;
            let previewHeight = $("#preview").contents().find('html').get(0).scrollHeight;
            let previewPos = previewHeight * editorPerc;
            $("#preview").contents().find('html').scrollTop(previewPos);
        });

        // if a page is clicked, activate buttons
        $(".list-group-item").click(function() {
            $(".btn").removeClass("disabled");
            $(this).addClass("active");
            // set all other elements to inactive
            $(".list-group-item").not(this).removeClass("active");
        });

        // set border size from .btn-outline-secondary
        $(".btn").css("--bs-btn-border-width", "0px");
    });
</script>
<script src="notes.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
{% endblock %}