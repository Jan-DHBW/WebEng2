{# templates/notes.html.twig #}
{% extends 'base.html.twig' %}
    
    {% block body %}
        <h1>Notes</h1>
    
        <table class=\"table\">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Created</th>
                    <th>Updated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for note in notes %}
                <tr>
                    <td><a href=\"{{ path('note_show', { 'id': note.id }) }}\">{{ note.id }}</a></td>
                    <td>{{ note.title }}</td>
                    <td>{{ note.content }}</td>
                    <td>{% if note.created %}{{ note.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if note.updated %}{{ note.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href=\"{{ path('note_show', { 'id': note.id }) }}\">show</a>
                            </li>
                            <li>
                                <a href=\"{{ path('note_edit', { 'id': note.id }) }}\">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan=\"6\">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    
        <ul>
            <li>
                <a href=\"{{ path('note_new') }}\">Create a new note</a>
            </li>
        </ul>
    {% endblock %}