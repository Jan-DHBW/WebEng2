{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container text-center" style="max-width: 400px">
    <h1>Register</h1>
    {{ form_start(registrationForm) }}
        <div class="form-control">
        <table>
            <tr>
                <td>Email-Adresse: </td>
                <td>{{ form_row(registrationForm.email)}}</td>
            </tr>
            <tr>
                <td>Vorname: </td>
                <td>{{ form_row(registrationForm.surname) }}</td>
            </tr>
            <tr>
                <td>Nachname: </td>
                <td>{{ form_row(registrationForm.lastname) }}</td>
            </tr>
            <tr>
                <td>Passwort: </td>
                <td>{{ form_row(registrationForm.plainPassword) }}</td>
            </tr>
            <tr>
                <td>Agree terms: {{ form_row(registrationForm.agreeTerms) }}</td>
            </tr>
         </table>
         <button type="submit" class="btn">Register</button>
        </div>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
