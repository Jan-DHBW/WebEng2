{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container text-center" style="max-width: 400px">
    <h1>Register</h1>
    {{ form_start(registrationForm) }}
        <div class="form-control">
        {{ form_row(registrationForm.email, {label: 'E-Mailadresse: '}) }}
       
        {{ form_row(registrationForm.surname, { label: 'Vorname: '}) }}
        {{ form_row(registrationForm.lastname, { label: Nachname: '}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Passwort: '
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
         </div>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
